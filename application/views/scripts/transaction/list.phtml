<h2><?php echo $this->title; ?></h2>

<a href="<?php echo $this->url(array('controller' => 'transaction', 'action' => 'add'));?>"><?php echo $this->translate('addAction'); ?></a><br />

<?php if(!empty($this->transactions)) : ?>
<table cellspacing="0">
<?php foreach ($this->transactions as $transaction) : ?>
    <tr>
        <td><?php echo $transaction->getAmount(); ?></td>
        <td><a href="<?php echo $this->url(array('controller' => 'transaction', 'action' => 'edit', 'id' => $transaction->getId()));?>"><?php echo $this->translate('editAction'); ?></a></td>
        <td><a href="<?php echo $this->url(array('controller' => 'transaction', 'action' => 'delete', 'id' => $transaction->getId()));?>"><?php echo $this->translate('deleteAction'); ?></a></td>
    </tr>
<?php endforeach; ?>
</table>
<?php endif; ?>
